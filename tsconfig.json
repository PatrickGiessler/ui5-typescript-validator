{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowJs": true,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"rootDir": "./",
		"paths": {
			"ui5/genericvalidator/*": ["./src/*"]
		},
		"types": [
            "@sapui5/types"
        ]
	},
	"include": ["./src/**/*"]
}
