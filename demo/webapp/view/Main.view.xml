<mvc:View controllerName="ui5.genericvalidator.demo.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'ui5/genericvalidator/demo/model/formatter'
	}">
	<Page title="UI5 - genericvalidator DEMO APP"
		class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		showNavButton="true">
		<content>
			<core:Fragment fragmentName="ui5.genericvalidator.demo.fragments.Form"
				type="XML" />
			<core:Fragment fragmentName="ui5.genericvalidator.demo.fragments.InvisForm"
				type="XML" />
			<core:Fragment fragmentName="ui5.genericvalidator.demo.fragments.FieldGroup"
				type="XML" />
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button text="Form Validator"
					type="Emphasized"
					press="onFormValidatorButtonPress" />
				<Button text="FieldGroup Validator"
					type="Emphasized"
					press="onFieldGroupValidatorButtonPress" />
				<Button text="InvisibleForm Validator"
					type="Emphasized"
					press="onInvisibleFormValidatorButtonPress" />
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>
