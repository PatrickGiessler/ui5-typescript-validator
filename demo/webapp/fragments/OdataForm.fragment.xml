<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <f:Form id="odataTestForm"
        editable="true"
        
        
        
        
        
        
        
        
        
        visible ="true">
        <f:title>
            <c:Title text="Address Odata" />
        </f:title>
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false" />
        </f:layout>
        <f:formContainers>
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement label="SalesOrder">
                        <f:fields>
                            <Input value="{SalesOrder}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="SalesOrder_Text">
                        <f:fields>
                            <TextArea value="{SalesOrder_Text}" />
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="CreationDateTime">
                        <f:fields>
                            <Input value="{CreationDateTime}">
                                <layoutData>
                                    <l:GridData span="XL1 L2 M2 S4" />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="GrossAmountInTransacCurrency">
                        <f:fields>
                            <Input value="{GrossAmountInTransacCurrency}">
                                <layoutData>
                                    <l:GridData span="XL1 L2 M2 S4" />
                                </layoutData>
                            </Input>
                        </f:fields>
                    </f:FormElement>

                </f:formElements>
            </f:FormContainer>
        </f:formContainers>
    </f:Form>
</c:FragmentDefinition>